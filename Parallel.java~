import lejos.nxt.*;
public class Parallel implements Runnable {

	private ColorSensor cs;
	

	public void run(){
		while(!Button.ENTER.isPressed()){
		
		}
	}

	public Parallel(ColorSensor cs){
		this.cs = cs;
	}
	
	public static void main(String[] args){
		ColorSensor c1 = new ColorSensor(SensorPort.S2);
		ColorSensor c2 = new ColorSensor(SensorPort.S3);
		
		Thread t1 = new Thread(new Parallel(c1));
		Thread t2 = new Thread(new Parallel(c2));
		
		t1.start();
		t2.start();
		
		System.out.Println("Wollen sie beenden?");
		Button.ENTER.waitForPress();
	}
}
